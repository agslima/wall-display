[MASTER]
# List of plugins
load-plugins=
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
# Suppress false positives from pygame's dynamic module structure
# and design warnings for this simple application
disable=
    no-member,
    too-many-instance-attributes,
    too-many-branches,
    too-few-public-methods

[LOGGING]
# Use lazy formatting for logging
logging-format-style=old

[DESIGN]
max-attributes=12
max-branches=14

